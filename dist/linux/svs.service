[Unit]
Description=SGX Verification Service

[Service]
Type=simple
User=svs
Group=svs
ExecStart=/usr/bin/svs run
ExecReload=/bin/kill -s HUP $MAINPID
TimeoutStartSec=0
Restart=on-failure
PermissionsStartOnly=true
RuntimeDirectory=sgx-verification-service
RuntimeDirectoryMode=0775

[Install]
WantedBy=multi-user.target
